<Window x:Class="LightControl_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:light="http://github.com/JamesBaiJun/controls"
        xmlns:local="clr-namespace:LightControl_Demo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="800"
        Height="450"
        mc:Ignorable="d">
    <Grid SnapsToDevicePixels="True" UseLayoutRounding="True">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFDB80FF" />
                <GradientStop Offset="1" Color="#FF5FCFFF" />
            </LinearGradientBrush>
        </Grid.Background>
        <light:NavigationPanel FontFamily="Arial" Foreground="HotPink">
            <light:NavigationItem Content="Home" IsSelected="True"/>
            <light:NavigationItem Content="Tool" />
            <light:NavigationItem Content="Setting" />
            <light:NavigationItem Content="Feather" />
            <light:NavigationItem Content="Network" />
        </light:NavigationPanel>
    </Grid>
</Window>
